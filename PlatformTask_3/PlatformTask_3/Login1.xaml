            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FE161000" Offset="1"/>
                    <GradientStop Color="#FEFFB900" Offset="0.106"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FECD9A13" Offset="0.329"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
