<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas x:Name="canvas" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" 
            MouseMove="Canvas_MouseMove" Background="Transparent" >


        <Menu >
            <MenuItem Header="File">
                <MenuItem Header="New" Click="MenuItem_Click1"></MenuItem>
                <MenuItem Header="Open" Click="MenuItem_Click_1"></MenuItem>
                <MenuItem Header="Save" Click="MenuItem_Click_2"></MenuItem>
            </MenuItem>
            <MenuItem Header="Shapes" Name="shapesMenu"></MenuItem>
        </Menu>


    </Canvas>
</Window>
